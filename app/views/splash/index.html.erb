<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to HKMS</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            color: white;
            overflow: hidden;
        }
        
        .splash-container {
            text-align: center;
            animation: fadeInUp 1.5s ease-out;
        }
        
        .welcome-text {
            font-size: 3.5rem;
            font-weight: 300;
            margin-bottom: 1rem;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }
        
        .hkms-text {
            font-size: 4.5rem;
            font-weight: bold;
            margin-bottom: 2rem;
            text-shadow: 3px 3px 6px rgba(0,0,0,0.4);
            letter-spacing: 3px;
        }
        
        .datetime-container {
            font-size: 1.5rem;
            opacity: 0.9;
            margin-top: 2rem;
        }
        
        .date {
            font-weight: 300;
            margin-bottom: 0.5rem;
        }
        
        .time {
            font-weight: 400;
            font-size: 2rem;
        }
        
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(50px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .pulse {
            animation: pulse 2s infinite;
        }
        
        @keyframes pulse {
            0% {
                transform: scale(1);
            }
            50% {
                transform: scale(1.05);
            }
            100% {
                transform: scale(1);
            }
        }
        
        @media (max-width: 768px) {
            .welcome-text {
                font-size: 2.5rem;
            }
            
            .hkms-text {
                font-size: 3.5rem;
                letter-spacing: 2px;
            }
            
            .datetime-container {
                font-size: 1.2rem;
            }
            
            .time {
                font-size: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="splash-container">
        <div class="welcome-text">Welcome to</div>
        <div class="hkms-text pulse">HKMS</div>
        <div class="datetime-container">
            <div class="date" id="current-date"></div>
            <div class="time" id="current-time"></div>
        </div>
    </div>
    
    <script>
        function updateDateTime() {
            const now = new Date();
            
            const dateOptions = { 
                weekday: 'long', 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
            };
            
            const timeOptions = {
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit'
            };
            
            document.getElementById('current-date').textContent = 
                now.toLocaleDateString('en-US', dateOptions);
            
            document.getElementById('current-time').textContent = 
                now.toLocaleTimeString('en-US', timeOptions);
        }
        
        // Update immediately
        updateDateTime();
        
        // Update every second
        setInterval(updateDateTime, 1000);
        
        // Auto-redirect to role selection after 5 seconds
        setTimeout(function() {
            window.location.href = '/roles';
        }, 5000);
    </script>
</body>
</html>
